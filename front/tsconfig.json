{
  "compilerOptions": {
    /* B치sicas */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",

    /* Manejo de archivos */
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    /* Resoluci칩n de m칩dulos */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Opciones estrictas */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Optimizaci칩n */
    "skipLibCheck": true,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/logic/grammar/grammar.js"
  ]
}
